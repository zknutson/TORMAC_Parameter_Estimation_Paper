	note = {arXiv: 1306.4312},
	keywords = {Astrophysics - Cosmology and Nongalactic Astrophysics},
	pages = {87},
	file = {Full Text:/home/z/Zotero/storage/MUZIE56U/Hoenig et al. - 2013 - Dust in the Polar Region as a Major Contributor to.pdf:application/pdf},
}

@article{hoenig_dusty_2010,
	title = {The {Dusty} {Heart} of {Nearby} {Active} {Galaxies} – {II}. {From} {Clumpy} {Torus} {Models} to {Physical} {Properties} of {Dust} around {AGN}},
