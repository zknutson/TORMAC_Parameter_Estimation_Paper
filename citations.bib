@article{almeyda_modeling_2020-1,
	title = {Modeling the {Infrared} {Reverberation} {Response} of the {Circumnuclear} {Dusty} {Torus} in {AGNs}: {An} {Investigation} of {Torus} {Response} {Functions}},
	volume = {891},
