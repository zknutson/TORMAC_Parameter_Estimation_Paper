	journal = {ApJ},
	author = {Hoenig, Sebastian F. and Kishimoto, Makoto and Tristram, Konrad R. W. and Prieto, M. Almudena and Gandhi, Poshak and Asmus, Daniel and Antonucci, Robert and Burtscher, Leonard and Duschl, Wolfgang J. and Weigelt, Gerd},
	month = jun,
