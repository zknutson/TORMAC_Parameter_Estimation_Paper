@article{gravity_collaboration_central_2021,
	title = {The {Central} {Parsec} of {NGC} 3783: {A} {Rotating} {Broad} {Emission} {Line} {Region}, {Asymmetric} {Hot} {Dust} {Structure}, and {Compact} {Coronal} {Line} {Region}},
